/**
 * pages/referral/index.wxss
 */

.page-title {
  background: linear-gradient(135deg, #00BCD4, #0097A7);
  color: white;
  padding: 40rpx 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.referral-campaigns {
  padding: 20rpx;
}

.campaign-card {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.campaign-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.campaign-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.campaign-status {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.campaign-status.active {
  background-color: #4CAF50;
}

.campaign-status.paused {
  background-color: #FF9800;
}

.campaign-status.ended {
  background-color: #9E9E9E;
}

.campaign-body {
  margin-bottom: 20rpx;
}

.campaign-desc {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.campaign-rewards {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.reward-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.reward-label {
  color: #999;
  font-size: 26rpx;
}

.reward-amount {
  color: #FF5722;
  font-weight: bold;
  font-size: 28rpx;
}

.campaign-time {
  color: #999;
  font-size: 24rpx;
}

.campaign-footer {
  display: flex;
  justify-content: flex-end;
}

.share-btn {
  background: linear-gradient(90deg, #FF9800, #FF5722);
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

.my-referral-stats {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #00BCD4;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.my-rewards-section {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.rewards-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.total-rewards {
  text-align: center;
}

.rewards-amount {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  color: #FF5722;
  margin-bottom: 10rpx;
}

.rewards-desc {
  font-size: 24rpx;
  color: #999;
}
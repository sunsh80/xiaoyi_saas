/**
 * pages/profile/profile.wxss - 重新设计的"我的"页面样式
 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 - 简化版 */
.user-info-section {
  background: linear-gradient(135deg, #00BCD4, #0097A7);
  color: white;
  border-radius: 0 0 60rpx 60rpx;
  margin-bottom: 20rpx;
  padding: 40rpx 0;
}

.user-info-container {
  padding: 20rpx 0;
}

.user-name-large {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: white;
}

.user-role-large {
  font-size: 34rpx;
  opacity: 0.9;
  color: white;
}

/* 区域标题 */
.section-title {
  background-color: #f9f9f9;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title-text-large {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
}

/* 菜单项 */
.menu-item-large {
  display: flex;
  align-items: center;
  padding: 45rpx 35rpx;
  font-size: 40rpx;
  color: #333;
  background-color: white;
  min-height: 120rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-icon-container {
  width: 70rpx;
  height: 70rpx;
  margin-right: 40rpx;
}

.menu-icon-large {
  width: 70rpx;
  height: 70rpx;
}

.menu-text-large {
  font-size: 40rpx;
  color: #333;
  flex: 1;
}

.arrow-large {
  font-size: 44rpx;
  color: #ccc;
}

/* 状态指示器 */
.status-indicator {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.status-indicator.working {
  background-color: #4cd964;
  color: white;
}

.status-indicator.resting {
  background-color: #ff3b30;
  color: white;
}

/* 统计数字样式 */
.stat-number-large {
  font-size: 52rpx;
  font-weight: bold;
  color: #00BCD4;
  margin-bottom: 15rpx;
}

.stat-label-large {
  font-size: 36rpx;
  color: #666;
}

/* 统计容器 */
.stats-container {
  margin-top: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 登录按钮 */
.login-text {
  font-size: 40rpx;
  color: #007aff;
  font-weight: bold;
  text-align: center;
}

/* 退出登录按钮 */
.logout-text {
  font-size: 38rpx;
  color: #ff3b30;
  font-weight: bold;
  text-align: center;
}

/* 通用样式 */
.bg-white {
  background-color: white;
}

.padding-30 {
  padding: 30rpx;
}

.padding-40 {
  padding: 40rpx;
}

.margin-bottom-20 {
  margin-bottom: 20rpx;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

.text-center {
  text-align: center;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.justify-around {
  justify-content: space-around;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

/* 适配大屏手机 */
@media screen and (min-width: 414px) {
  .user-name-large {
    font-size: 48rpx;
  }

  .menu-item-large {
    padding: 50rpx 40rpx;
    font-size: 44rpx;
  }

  .menu-text-large {
    font-size: 44rpx;
  }

  .stat-number-large {
    font-size: 56rpx;
  }

  .stat-label-large {
    font-size: 40rpx;
  }
}
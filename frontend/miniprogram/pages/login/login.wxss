/**
 * pages/login/login.wxss
 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx;
}

.login-header {
  padding: 60rpx 0 40rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #00BCD4;
}

.login-form {
  padding-top: 40rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background-color: white;
}

/* 租户选择组 */
.tenant-selection-group {
  margin-bottom: 50rpx;
}

.selection-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.tenant-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.tenant-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  background-color: #f8f8f8;
  font-size: 32rpx;
  color: #666;
}

.tenant-btn.selected {
  background-color: #00BCD4;
  border-color: #00BCD4;
  color: white;
}

.tenant-btn:first-child {
  margin-left: 0;
}

.tenant-btn:last-child {
  margin-right: 0;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 40rpx 0;
  background-color: #00BCD4;
  color: white;
}

.register-link {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.link-text {
  color: #00BCD4;
  margin-left: 10rpx;
}

/* 适配大屏手机 */
@media screen and (min-width: 414px) {
  .container {
    padding: 50rpx;
  }

  .app-name {
    font-size: 52rpx;
  }

  .input-field {
    font-size: 36rpx;
    height: 90rpx;
  }

  .tenant-btn {
    font-size: 36rpx;
    padding: 35rpx 25rpx;
  }

  .selection-label {
    font-size: 36rpx;
  }

  .login-btn {
    height: 90rpx;
    font-size: 36rpx;
  }
}
<!--pages/auth/worker-register/worker-register.wxml-->
<view class="container">
  <view class="header">
    <text class="title">工人入驻</text>
    <text class="subtitle">免费注册，接单赚钱</text>
  </view>

  <view class="form">
    <!-- 基本信息 -->
    <view class="form-section">
      <view class="section-title">基本信息</view>
      
      <view class="input-group">
        <text class="label">真实姓名 <text class="required">*</text></text>
        <input class="input" placeholder="请输入真实姓名" value="{{real_name}}" bind:input="onInput" data-field="real_name"/>
      </view>

      <view class="input-group">
        <text class="label">手机号 <text class="required">*</text></text>
        <input class="input" type="number" maxlength="11" placeholder="请输入手机号" value="{{phone}}" bind:input="onInput" data-field="phone"/>
      </view>

      <view class="input-group">
        <text class="label">身份证号</text>
        <input class="input" placeholder="请输入身份证号（用于实名认证）" value="{{id_card}}" bind:input="onInput" data-field="id_card"/>
      </view>
    </view>

    <!-- 账户信息 -->
    <view class="form-section">
      <view class="section-title">账户信息</view>
      
      <view class="input-group">
        <text class="label">用户名 <text class="required">*</text></text>
        <input class="input" placeholder="请设置用户名" value="{{username}}" bind:input="onInput" data-field="username"/>
      </view>

      <view class="input-group">
        <text class="label">密码 <text class="required">*</text></text>
        <input class="input" type="password" placeholder="请设置密码（6-20 位）" value="{{password}}" bind:input="onInput" data-field="password"/>
      </view>

      <view class="input-group">
        <text class="label">确认密码 <text class="required">*</text></text>
        <input class="input" type="password" placeholder="请再次输入密码" value="{{confirm_password}}" bind:input="onInput" data-field="confirm_password"/>
      </view>
    </view>

    <!-- 技能标签 -->
    <view class="form-section">
      <view class="section-title">擅长技能（可选）</view>
      
      <view class="tags">
        <view class="tag {{skills.includes('搬运') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="搬运">
          <text>搬运</text>
        </view>
        <view class="tag {{skills.includes('装卸') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="装卸">
          <text>装卸</text>
        </view>
        <view class="tag {{skills.includes('配送') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="配送">
          <text>配送</text>
        </view>
        <view class="tag {{skills.includes '打包') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="打包">
          <text>打包</text>
        </view>
        <view class="tag {{skills.includes('整理') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="整理">
          <text>整理</text>
        </view>
        <view class="tag {{skills.includes('其他') ? 'selected' : ''}}" bind:tap="toggleSkill" data-skill="其他">
          <text>其他</text>
        </view>
      </view>
    </view>

    <!-- 服务协议 -->
    <view class="agreement">
      <checkbox-group bind:change="onAgreementChange">
        <label class="agreement-label">
          <checkbox value="agree" checked="{{agreed}}"/>
          <text class="agreement-text">我已阅读并同意</text>
          <text class="agreement-link">《工人入驻协议》</text>
        </label>
      </checkbox-group>
    </view>
  </view>

  <view class="footer">
    <button class="submit-btn" bind:tap="submitRegister">立即入驻</button>
    <view class="tip">注册成功后可立即接单</view>
  </view>
</view>

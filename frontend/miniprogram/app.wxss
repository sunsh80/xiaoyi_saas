/**
 * 小蚁搬运小程序全局样式
 */

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.page-section {
  margin: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-primary {
  background-color: #00BCD4;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-success {
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-warning {
  background-color: #FF9800;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-danger {
  background-color: #F44336;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.padding-20 {
  padding: 20rpx;
}

.margin-20 {
  margin: 20rpx;
}

.bg-white {
  background-color: #fff;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

.status-pending {
  color: #FF9800;
}

.status-assigned {
  color: #2196F3;
}

.status-in-progress {
  color: #4CAF50;
}

.status-completed {
  color: #8BC34A;
}

.status-cancelled {
  color: #F44336;
}

/* 订单卡片样式 */
.order-card {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.order-body {
  margin: 20rpx 0;
}

.order-detail-item {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #666;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}
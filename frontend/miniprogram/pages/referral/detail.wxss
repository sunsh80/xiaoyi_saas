/**
 * pages/referral/detail.wxss
 */

.campaign-detail {
  background: white;
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.campaign-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.campaign-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.campaign-status {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: white;
}

.campaign-status.active {
  background-color: #4CAF50;
}

.campaign-status.paused {
  background-color: #FF9800;
}

.campaign-status.ended {
  background-color: #9E9E9E;
}

.campaign-body {
  margin-bottom: 30rpx;
}

.desc-label {
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.desc-content {
  color: #666;
  line-height: 1.6;
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx 0;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.reward-item, .limit-item, .time-item {
  padding: 15rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}

.reward-label {
  color: #666;
  font-size: 28rpx;
}

.reward-amount {
  color: #FF5722;
  font-weight: bold;
  font-size: 30rpx;
}

.reward-type {
  padding: 15rpx 0;
  color: #999;
  font-size: 26rpx;
}

.campaign-action {
  margin-top: 40rpx;
  text-align: center;
}

.share-btn {
  background: linear-gradient(90deg, #FF9800, #FF5722);
  color: white;
  border: none;
  border-radius: 30rpx;
  padding: 20rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}
/* pages/orders/detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.order-detail-container {
  height: calc(100vh - 120rpx); /* 减去tabBar高度 */
}

.order-card {
  border-radius: 20rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

/* 大字体样式 */
.large-text {
  font-size: 32rpx; /* 约16px */
  line-height: 1.5;
}

.large-bold-text {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 1.5;
}

.large-bold-text {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 1.6;
}

/* 订单头部 */
.order-header {
  border-radius: 20rpx 20rpx 0 0;
}

.order-title-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.order-title {
  flex: 1;
  color: #333;
  margin-right: 20rpx;
}

.order-status {
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  color: white;
  min-width: 120rpx;
  text-align: center;
}

.status-pending {
  background-color: #ff9800;
}

.status-assigned {
  background-color: #2196f3;
}

.status-in_progress {
  background-color: #4caf50;
}

.status-completed {
  background-color: #9e9e9e;
}

.status-cancelled {
  background-color: #f44336;
}

.order-number {
  color: #666;
}

/* 订单详情 */
.order-details {
  background-color: white;
}

.detail-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.detail-group:last-child {
  border-bottom: none;
}

.group-title {
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
}

.label {
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.value {
  color: #333;
  word-break: break-all;
}

.amount-text {
  color: #ff5722;
  font-size: 36rpx;
  font-weight: bold;
}

/* 操作按钮区域 */
.action-buttons {
  background-color: white;
  border-top: 1rpx solid #eee;
  padding: 40rpx 30rpx;
}

/* 大按钮样式 */
.btn-large {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  border: none;
}

.btn-large:last-child {
  margin-bottom: 0;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-success {
  background-color: #4cd964;
  color: white;
}

.btn-warning {
  background-color: #ffcc00;
  color: black;
}

.btn-call {
  background-color: #34c759;
  color: white;
}

.btn-map {
  background-color: #5ac8fa;
  color: white;
}

.accept-btn {
  background-color: #ff3b30 !important; /* 醒目的红色接单按钮 */
  color: white !important;
  font-weight: bold;
  font-size: 40rpx !important;
}

.btn-text {
  display: block;
  text-align: center;
  vertical-align: middle;
}

/* 订单日志 */
.order-logs {
  border-radius: 20rpx;
  margin: 20rpx;
  overflow: hidden;
}

.log-item {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.log-item:last-child {
  margin-bottom: 0;
}

.log-type {
  color: #007aff;
  font-weight: bold;
}

.log-desc {
  color: #666;
}

.log-meta {
  color: #999;
  font-size: 28rpx;
}

/* 通用样式 */
.bg-white {
  background-color: white;
}

.bg-light-blue {
  background-color: #f0f8ff;
}

.padding-30 {
  padding: 30rpx;
}

.margin-20 {
  margin: 20rpx;
}

.margin-top-20 {
  margin-top: 20rpx;
}

.margin-top-0 {
  margin-top: 0;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

/* 适配大屏手机 */
@media screen and (min-width: 414px) {
  .order-card {
    margin: 25rpx;
  }
  
  .btn-large {
    height: 110rpx;
    font-size: 40rpx;
    line-height: 110rpx;
  }
  
  .large-text {
    font-size: 34rpx;
  }
  
  .large-bold-text {
    font-size: 38rpx;
  }
}
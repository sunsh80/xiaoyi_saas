/**
 * pages/orders/create.wxss - 订单创建页面样式
 */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 页面标题 */
.page-title {
  border-radius: 0 0 40rpx 40rpx;
  background: linear-gradient(135deg, #00BCD4, #0097A7);
  color: white;
}

.title-text-large {
  font-size: 44rpx;  /* 更大的标题字体 */
  font-weight: bold;
  color: white;
}

/* 表单容器 */
.form-container {
  padding: 20rpx;
}

/* 表单区域 */
.form-section {
  border-radius: 20rpx;
  overflow: hidden;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 35rpx 30rpx;  /* 更大的内边距 */
  min-height: 100rpx;
}

.form-label {
  width: 200rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #ff4757;
  margin-right: 8rpx;
  font-weight: bold;
  font-size: 36rpx;
}

.label-text {
  font-size: 36rpx;  /* 更大的标签字体 */
  color: #333;
  font-weight: bold;
}

.form-input {
  flex: 1;
  font-size: 34rpx;  /* 更大的输入字体 */
  padding: 10rpx 0;
  text-align: right;
  color: #333;
}

.form-textarea {
  flex: 1;
  font-size: 34rpx;  /* 更大的输入字体 */
  padding: 10rpx 0;
  text-align: left;
  color: #333;
  min-height: 100rpx;
  line-height: 1.5;
}

/* 按钮样式 */
.btn-submit-large {
  width: 100%;
  height: 100rpx;  /* 更大的按钮高度 */
  line-height: 100rpx;
  background-color: #007aff;
  color: white;
  font-size: 40rpx;  /* 更大的按钮字体 */
  border-radius: 15rpx;
  border: none;
}

/* 通用样式 */
.bg-white {
  background-color: white;
}

.padding-30 {
  padding: 30rpx;
}

.padding-40 {
  padding: 40rpx;
}

.margin-bottom-20 {
  margin-bottom: 20rpx;
}

.border-bottom {
  border-bottom: 1rpx solid #eee;
}

.border-bottom:last-child {
  border-bottom: none;
}

/* 适配大屏手机 */
@media screen and (min-width: 414px) {
  .form-item {
    padding: 40rpx 35rpx;
    min-height: 110rpx;
  }
  
  .title-text-large {
    font-size: 48rpx;
  }
  
  .label-text {
    font-size: 40rpx;
  }
  
  .form-input {
    font-size: 38rpx;
  }
  
  .btn-submit-large {
    height: 110rpx;
    font-size: 44rpx;
    line-height: 110rpx;
  }
}
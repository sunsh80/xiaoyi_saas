/**
 * pages/login/login.wxss
 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx;
}

.login-header {
  padding: 60rpx 0 40rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #00BCD4;
}

.login-form {
  padding-top: 40rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-field {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background-color: white;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin: 40rpx 0;
  background-color: #00BCD4;
  color: white;
}

.register-link {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.link-text {
  color: #00BCD4;
  margin-left: 10rpx;
}

/* 租户选择器 */
.tenant-selector {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  background: #fff;
  padding: 30rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 0;
}

.arrow {
  font-size: 36rpx;
  color: #999;
}

/* 租户选择弹窗 */
.tenant-picker-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  padding: 10rpx;
}

.tenant-options {
  padding: 20rpx 0;
}

.tenant-option {
  padding: 35rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 34rpx;
  color: #333;
}

.tenant-option:last-child {
  border-bottom: none;
}

.tenant-option:active {
  background-color: #f0f8ff;
}

/* 适配大屏手机 */
@media screen and (min-width: 414px) {
  .container {
    padding: 50rpx;
  }

  .app-name {
    font-size: 52rpx;
  }

  .input-field {
    font-size: 36rpx;
    height: 90rpx;
  }

  .tenant-option {
    padding: 40rpx;
    font-size: 38rpx;
  }

  .picker {
    font-size: 36rpx;
  }

  .login-btn {
    height: 90rpx;
    font-size: 36rpx;
  }
}